<% layout("layouts/boilerplate") %> 

<h1 class="text-center mb-4">Retrieve Account</h1>
<div class="col-md-6 offset-md-3">
    <form action="/forget-password" novalidate class="validated-form" method="POST">
        <div class="form-floating mb-3">
            <input type="email" id="email" name="registeredEmail" class="form-control" placeholder="email" required autofocus>
            <label for="email" class="form-label text-muted">Enter registered email</label>
        </div>
        <div class="mb-3 text-center">
            <button class="btn btn-success" type="submit">Reset Password</button>
        </div>
    </form>
</div>