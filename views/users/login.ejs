<% layout('layouts/boilerplate') %> 

<div class="container d-flex justify-content-center align-items-center mt-2 mb-3">
    <div class="row flex-fill">
        <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
            <div class="card shadow">
                <img src="/images/register_image.jpg" alt="" class="card-img-top" />
                <div class="card-body">
                    <h5 class="card-title">Login</h5>
                    <form action="/login" class="validated-form" method="POST" novalidate>
                        <div class="form-floating mb-3">
                            <input type="text" id="username" name="username" class="form-control" placeholder="abc2002" required autofocus>
                            <label for="username" class="form-label text-muted">Username</label>
                        </div>
                        <div class="form-floating mb-3">
                            <input type="password" id="password" name="password" class="form-control" placeholder="abc2002" required>
                            <label for="password" class="form-label text-muted">Password</label>
                        </div>
                        <div class="d-grid gap-2 col-12 mx-auto">
                            <button class="btn btn-success">Login</button>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-muted d-flex justify-content-center gap-2 py-3">
                    <a href="/register" class="btn btn-outline-success sign-up-btn">Sign Up</a>
                    <a href="/forget-password" class="btn btn-outline-success forget-btn">Forget Password</a>
                </div>
            </div>
        </div>
    </div>
</div>